{
  "manifest_version": 3,
  "name": "Custom Authentication Extension",
  "version": "1.0",
  "description": "Intercepts login forms and triggers a custom authentication flow.",
  "permissions": [
    "scripting",
    "activeTab",
    "https://twitter.com/*",
    "https://www.instagram.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["twitter/content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["instagram/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["twitter/auth.html", "twitter/auth.js"],
      "matches": ["https://twitter.com/*"]
    },
    {
      "resources": ["instagram/auth.html", "instagram/auth.js"],
      "matches": ["https://www.instagram.com/*"]
    }
  ]
}